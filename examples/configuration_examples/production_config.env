# Production Wazuh MCP Server Configuration
# Optimized for production environments with enhanced features

# === REQUIRED WAZUH CONNECTION ===
WAZUH_HOST=wazuh-prod.company.com
WAZUH_USER=wazuh-mcp-prod
WAZUH_PASS=very-secure-production-password

# === WAZUH CLUSTER SETTINGS ===
WAZUH_PORT=55000
WAZUH_INDEXER_HOST=wazuh-indexer-prod.company.com
WAZUH_INDEXER_PORT=9200

# === PRODUCTION SSL ===
VERIFY_SSL=true
WAZUH_ALLOW_SELF_SIGNED=false  # Use proper certificates in production

# === LOGGING ===
DEBUG=false
LOG_LEVEL=WARNING
LOG_FILE=/var/log/wazuh-mcp/server.log
LOG_ROTATE=true
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# === PERFORMANCE OPTIMIZATION ===
REQUEST_TIMEOUT=45
MAX_RETRIES=5
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW=60
CONNECTION_POOL_SIZE=20
MAX_CONCURRENT_REQUESTS=50

# === CACHING ===
CACHE_TTL=300
MAX_CACHE_SIZE=5000
CACHE_CLEANUP_INTERVAL=3600

# === SECURITY ===
API_KEY_ROTATION_DAYS=30
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300

# === PHASE 5 ENHANCEMENT SYSTEM ===
# Enable all advanced features for production
ENABLE_PROMPT_ENHANCEMENT=true
ENABLE_CONTEXT_AGGREGATION=true
ENABLE_ADAPTIVE_RESPONSES=true
ENABLE_REALTIME_UPDATES=true

# === CONTEXT AGGREGATION SETTINGS ===
CONTEXT_CACHE_TTL=600
MAX_CONTEXT_SIZE=10000
ENHANCEMENT_TIMEOUT=10.0
MAX_CONCURRENT_CONTEXT_REQUESTS=10

# === ADAPTIVE RESPONSE SETTINGS ===
QUALITY_THRESHOLD_HIGH=0.80
QUALITY_THRESHOLD_PARTIAL=0.60
QUALITY_THRESHOLD_MINIMAL=0.40
ADAPTIVE_FORMAT_TIMEOUT=5.0

# === REAL-TIME MONITORING ===
REALTIME_UPDATE_INTERVAL_CRITICAL=30
REALTIME_UPDATE_INTERVAL_HIGH=60
REALTIME_UPDATE_INTERVAL_MEDIUM=300
REALTIME_UPDATE_INTERVAL_LOW=900
MAX_REALTIME_CONTEXTS=100
REALTIME_CLEANUP_INTERVAL=1800

# === EXTERNAL APIS (OPTIONAL) ===
VIRUSTOTAL_API_KEY=your-virustotal-api-key
SHODAN_API_KEY=your-shodan-api-key
ABUSEIPDB_API_KEY=your-abuseipdb-api-key

# === MONITORING & METRICS ===
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60
PERFORMANCE_MONITORING=true

# === BACKUP & RECOVERY ===
BACKUP_INTERVAL=86400  # Daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backup/wazuh-mcp